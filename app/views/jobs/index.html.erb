

    <div class="page-content bg-white">
        <!-- inner page banner -->
        <div class="dez-bnr-inr overlay-black-middle job1" style="height:300px;margin-top: 80px;">
            <div class="container">
                <div class="dez-bnr-inr-entry">
                    <h1 class="text-white">Browse Jobs</h1>
          <!-- Breadcrumb row -->
          <div class="breadcrumb-row">
            <ul class="list-inline">
              <li><a href="<%= root_path %>">Home</a></li>
              <li>Browse Jobs</li>
            </ul>
          </div>
          <!-- Breadcrumb row END -->
                </div>
            </div>
        </div>
        <!-- inner page banner END -->
        <!-- contact area -->
        <div class="content-block">
      <!-- Browse Jobs -->
      <div class="section-full bg-white browse-job content-inner-2">
        <div class="container">
              <h5 class="widget-title font-weight-700 text-uppercase" style="font-weight: bold;">Recent Jobs</h5>
                <% if @jobs.count == 0 %>
                  <h1  align="center">Oops! No Jobs Avalaible.</br>Come Back Later</br><i style="font-size:50px; color: #FFD700;" class="fa fa-frown-o reset-i"></i></h1>                 
                <% end %>
          <div class="row">
            <div class="col-xl-9 col-lg-8">

              <ul class="post-job-bx">
                <% @jobs.each do|job| %>
                <li>
                  <a href="<%= job_path(job) %>"/>
                    <div class="d-flex m-b30">
                      <div class="job-post-company">
                        <span>                      
                          <% if job.avatar != nil %>              
                            <%= image_tag job.avatar(:large) %>
                          <% else %>
                            <img class="img1">
                         <% end %>
                       </span>
                      </div>
                      <div class="job-post-info">
                        <h4><strong><%= job.title %></strong></h4>
                        <ul>
                          <li><i class="fa fa-map-marker"></i> <%= job.job_city %>,<%= job.job_country %></li>
                          <li><i class="fa fa-bookmark-o"></i><%= job.job_type %></li>
                          <li><i class="fa fa-clock-o"></i>Published: <%= time_ago_in_words(job.created_at) %> ago</li>
                        </ul>
                      </div>
                    </div>
                    <div class="d-flex">
                      <div class="job-time mr-auto">
                        <span><%= job.job_type %></span>
                      </div>
                      <div class="salary-bx">
                        <span style="font-weight: bold;">$<%= job.salary %></span>
                      </div>
                    </div>
                    <!-- <span class="post-like fa fa-thumbs-up"></span> -->
                  </a>
                </li>
                <% end %>
                
              </ul>
              <div class="pagination-bx m-t30" >
                 <%= will_paginate @jobs,class: "pagination center" %>
              </div>
            </div>
            
            <div class="col-xl-3 col-lg-4">
              <%= form_tag(jobs_path, :method=>'get') do %> 
              <div class="sticky-top">
                <div class="clearfix m-b30">
                  <h5 class="widget-title font-weight-700 text-uppercase">Salary($)</h5>
                  <div class="">
                    <%= text_field_tag :job_salary ,"",class: "widget-title font-weight-700 m-t0 text-uppercase form-control",placeholder: "Minimum Salary"%>
                  </div>
                </div>
                <div class="clearfix m-b10">
                  <h5 class="widget-title font-weight-700 m-t0 text-uppercase">Location</h5>
                  <div class="form-group">
                    <label class="widget-title font-weight-700 m-t0 text-uppercase">City</label></br>
                    <%= text_field_tag :city,"",class: "widget-title font-weight-700 m-t0 text-uppercase form-control"%>
                  </div>
                  <div class="form-group">
                    <label class="widget-title font-weight-700 m-t0 text-uppercase">Country</label></br>
                    <%= text_field_tag :country,"",class: "widget-title font-weight-700 m-t0 text-uppercase form-control"%>
                  </div>
                </div>
                <div class="clearfix m-b30">
                  <h5 class="widget-title font-weight-700 text-uppercase">Job type</h5>
                  <div class="row">
                    <div class="col-lg-7 col-md-7 col-sm-7 col-7">
                      <div class="product-brand">
                        <div class="custom-control custom-checkbox">
                          <%= radio_button_tag :type,"Freelance",false %>
                          <label >Freelance</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                          <%= radio_button_tag :type,"Full Time",false %>
                          <label >Full Time</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                          <%= radio_button_tag :type,"Internship",false %>
                          <label >Internship</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                          <%= radio_button_tag :type,"Part Time",false %>
                          <label >Part Time</label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
<!--                 <div class="clearfix">
                  <h5 class="widget-title font-weight-700 text-uppercase">Category</h5>
                  <select class="form-select" aria-label="Default select example">
                    <option>Any Category</option>
                    <option>Automotive Jobs</option>
                    <option>Construction Facilities</option>
                    <option>Design, Art & Multimedia</option>
                    <option>Food Services</option>
                  </select>
                </div>
              <div> -->
                <%= submit_tag "Search", class: "site-button bg-primary" %>
              </div> 
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
            <!-- Browse Jobs END -->
    </div>
    </div>
  </div>
</div>
</div>
</div>


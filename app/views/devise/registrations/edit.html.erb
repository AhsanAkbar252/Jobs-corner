    <div class="page-content bg-white">
        <!-- inner page banner -->
        <div class="dez-bnr-inr overlay-black-middle bg-pt login1" >
            <div class="container">
                <div class="dez-bnr-inr-entry">
                    <h1 class="text-white">Change Credentials</h1>
          <!-- Breadcrumb row -->
          <div class="breadcrumb-row">
            <ul class="list-inline">
              <li><a href="#">Home</a></li>
              <li>Change Credentials</li>
            </ul>
          </div>
          <!-- Breadcrumb row END -->
                </div>
            </div>
        </div>
        <!-- inner page banner END -->
        <!-- contact area -->
        <div class="section-full content-inner-2 shop-account">
            <!-- Product -->
            <div class="container">
                <div class="row">
          <div class="col-md-12 text-center">
            <h3 class="font-weight-700 m-t0 m-b20">Your Account</h3>
          </div>
        </div>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <div class="max-w500 m-auto m-b30">
            <div class="p-a30 border-1 seth">
              <div class="tab-content nav">
                <%= form_for(resource, as: resource_name, :url=> registration_path(resource_name),:html =>{ method: :put ,class: "tab-pane active col-12 p-a0",id: "login"}) do |f| %>
                  <h4 class="font-weight-700">PERSONAL INFORMATION</h4>
                  <div class="form-group">
                    <%= f.label :username ,class: "font-weight-700"%>
                    <%= f.text_field :username, autofocus: true, class: "form-control", placeholder:"Enter username" %> 
                  </div>
                  <div class="form-group">
                    <%= f.label :email ,class: "font-weight-700"%>
                    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Enter email" %> 
                  </div>
                  <div class="form-group">
                    <%= f.label :current_password,class: "font-weight-700" %>
                    <%= f.password_field :current_password, class: "form-control", placeholder:"Current Password" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password,class: "font-weight-700" %>
                    <%= f.password_field :password, class: "form-control", placeholder:"Enter Password" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password_confirmation,class: "font-weight-700" %>
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Re-Enter Password" %>
                  </div>


                  <div class="text-left">
                    <%= f.submit "Update", class: "site-button m-r5 button-lg" %>
                    <%= link_to "Back", :back , class: "site-button m-r5 button-lg" %>
                    <%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class: "site-button m-r5 button-lg" %>
                  </div></br>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
            <!-- Product END -->
    </div>
    <!-- contact area  END -->
    </div>